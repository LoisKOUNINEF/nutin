{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {},
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist-build",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2022",
      "DOM"
    ],
    "types": [],
    "resolveJsonModule": true,
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/app",
    "src/core",
    "src/libs"
  ],
  "exclude": [
    "node_modules"
  ]
}
